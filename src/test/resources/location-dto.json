{
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "The unique identifier of the location.",
      "format": "int64"
    },
    "name": {
      "type": "string",
      "description": "The name of the location.",
      "example": "Name"
    },
    "lat": {
      "type": "number",
      "description": "The latitude of the location.",
      "format": "double",
      "example": 51.5074
    },
    "lon": {
      "type": "number",
      "description": "The longitude of the location.",
      "format": "double",
      "example": -0.1278
    }
  },
  "description": "Data transfer object representing a location."
}
